{
  "title": "Page",
  "description": "A page served by landable",
  "type": "object",
  "additionalProperties": false,
  "required": ["path", "status_code_id", "body"],

  "properties": {
    "id": {
      "$ref": "uuid.json"
    },

    "theme_id": {
      "type": [{ "$ref": "uuid.json" }, "null"]
    },

    "category_id": {
      "type": [{ "$ref": "uuid.json" }, "null"]
    },

    "path": {
      "type": "string"
    },

    "status_code_id": {
      "type": [{ "$ref": "uuid.json" }]
    },

    "title": {
      "type": ["string", "null"]
    },

    "body": {
      "type": ["string"]
    },

    "head_tag": {
      "type": ["string", "null"]
    },

    "redirect_url": {
      "type": ["string", "null"],
      "format": "uri"
    },

    "preview_path": {
      "type": "string",
      "format": "uri"
    },

    "is_publishable": {
      "type": "boolean"
    },

    "published_revision_id": {
      "type": ["null", {"$ref": "uuid.json"}]
    },

    "lock_version": {
      "type": "integer",
      "min": 1
    },

    "updated_by_author_id": {
      "type": ["null", {"$ref": "uuid.json"}]
    },

    "meta_tags": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "keywords": {
          "type": ["string", "null"]
        },

        "description": {
          "type": ["string", "null"]
        },

        "robots": {
          "type": ["string", "null"]
        }
      }
    }
  }
}
