{
  "title": "Page",
  "description": "A page served by landable",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": {
      "$ref": "uuid.json"
    },

    "theme_id": {
      "type": [{ "$ref": "uuid.json" }, "null"]
    },

    "category_id": {
      "type": [{ "$ref": "uuid.json" }, "null"]
    },

    "path": {
      "type": "string",
      "required": true
    },

    "status_code_id": {
      "type": [{ "$ref": "uuid.json" }],
      "required": true
    },

    "title": {
      "type": ["string", "null"]
    },

    "body": {
      "type": ["string", "null"]
    },

    "redirect_url": {
      "type": ["string", "null"],
      "format": "uri"
    },

    "preview_url": {
      "type": "string",
      "format": "uri"
    },

    "is_publishable": {
      "type": "boolean"
    },

    "asset_ids": {
      "type": "array",
      "items": { "$ref": "uuid.json" }
    },

    "published_revision_id": {
      "type": ["null", {"$ref": "uuid.json"}]
    },

    "meta_tags": {
      "type": "object",
      "additionalProperties": false,

      "properties": {
        "keywords": {
          "type": ["string", "null"]
        },

        "description": {
          "type": ["string", "null"]
        },

        "robots": {
          "type": ["string", "null"]
        }
      }
    }
  }
}
