{
  "title": "Author",
  "description": "An author of landable content",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": {
      "$ref": "uuid.json",
      "required": true
    },

    "username": {
      "type": "string",
      "required": true
    },

    "email": {
      "type": "string",
      "format": "email",
      "required": true
    },

    "first_name": {
      "type": "string",
      "required": true
    },

    "last_name": {
      "type": "string",
      "required": true
    }
  }
}
