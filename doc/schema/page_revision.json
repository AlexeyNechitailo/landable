{
  "title": "Page Revision",
  "description": "A particular snapshot of a page which has, at some point, been published.",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": {
      "$ref": "uuid.json",
      "required": true
    },

    "page_id": {
      "$ref": "uuid.json",
      "required": true
    },

    "theme_id": {
      "type": [{ "$ref": "uuid.json" }, "null"],
      "required": true
    },

    "author_id": {
      "type": "string",
      "required": true
    },

    "url": {
      "type": "string",
      "format": "uri",
      "required": true
    },

    "notes": {
      "type": ["string", "null"],
      "required": true
    },

    "is_published": {
      "type": "boolean",
      "required": true
    },

    "is_minor": {
      "type": "boolean",
      "required": true
    },

    "ordinal": {
      "type": "integer",
      "minimum": 1,
      "required": true
    },

    "created_at": {
      "type": "string",
      "format": "date-time",
      "required": true
    },

    "snapshot_attributes": {
      "$ref": "page.json#"
    }
  }
}
