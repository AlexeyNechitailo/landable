{
  "title": "Asset",
  "description": "An uploaded asset file",
  "type": "object",
  "additionalProperties": false,

  "properties": {
    "id": {
      "required": true,
      "$ref": "uuid.json"
    },

    "name": {
      "required": true,
      "type": "string",
      "minLength": 1
    },

    "description": {
      "type": ["string", "null"]
    },

    "public_url": {
      "required": true,
      "type": "string",
      "format": "uri"
    },

    "md5sum": {
      "required": true,
      "type": "string",
      "length": 32
    },

    "file_size": {
      "required": true,
      "type": "integer",
      "min": 1
    },

    "mime_type": {
      "required": true,
      "type": "string"
    },

    "author_id": {
      "required": true,
      "$ref": "uuid.json"
    },

    "theme_ids": {
      "type": "array",
      "required": true,
      "items": { "$ref": "uuid.json" }
    },

    "page_ids": {
      "type": "array",
      "required": true,
      "items": { "$ref": "uuid.json" }
    },

    "created_at": {
      "required": true,
      "type": "string",
      "format": "date-time"
    },

    "updated_at": {
      "required": true,
      "type": "string",
      "format": "date-time"
    }
  }
}
